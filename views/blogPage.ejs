    <script type="module" src="https://md-block.verou.me/md-block.js"></script>
    <title><%= currentBlog.title %></title>
    <link rel="stylesheet" href="http://blog.tunahan.pw/css/blogPageStyle.css">
</head>
<body>
    <div class="landing">
        <div class="backToPosts"><a href="/"><i class="fa-solid fa-circle-left"></i></a></div>
        <div class="banner"><img src="<%= currentBlog.thumbnail %>" alt=""></div>
        <div class="title"><h1 style="font-size: 400%;"><%= currentBlog.title %></h1></div>
        <div class="meta"> 
            <span class="author"><%= currentBlog.author %></span>
            <span class="date"><%= currentBlog.publishDate %></span>
        </div>
    </div>
    <div class="content">
        <md-block src="<%= currentBlog.content %>">
            
        </md-block>
    </div>
    <div class="footer">
        <span class="socials">
            <a href="https://www.instagram.com/tunahan022/"><i class="fa-brands fa-instagram"></i></a>
            <a href="https://github.com/Rynxie"><i class="fa-brands fa-github"></i></a>
            <a href="https://www.linkedin.com/in/tunahankayaakdu/"><i class="fa-brands fa-linkedin"></i></a>
        </span>
        <span class="mail"><a href="mailto:work@tunahan.pw?subject='I have a Job for u!'">work@tunahan.pw</a></span>
    </div>
